<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="18dp"
    android:id="@+id/rootContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Login controls (visible when not logged in) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPhoneNumber"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="18dp"
        android:layout_height="@dimen/textinput_height"
        app:boxCollapsedPaddingTop="10dp"
        app:boxBackgroundColor="@color/textinput_background"
        app:boxBackgroundMode="filled"
        app:boxStrokeColor="@color/purple_500"
        app:endIconDrawable="@drawable/ic_account_circle"
        app:endIconMode="custom"
        app:hintAnimationEnabled="true"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/eTxtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/placeholder_for_login"
            android:imeOptions="actionDone"
            android:paddingTop="25dp"
            android:gravity="bottom"
            android:inputType="text"
            android:maxLength="14" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginBtn"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login" />

    <!-- Authenticated-only content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLogout"
        android:layout_marginHorizontal="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/loginStatus"
            app:layout_constraintBottom_toBottomOf="@id/logoutBtn"
            app:layout_constraintTop_toTopOf="@id/logoutBtn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <com.google.android.material.button.MaterialButton
            android:layout_marginHorizontal="24dp"
            android:id="@+id/logoutBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/routesHeader"
        android:layout_marginHorizontal="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/routes"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_marginTop="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/routesList"
        android:layout_marginHorizontal="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        android:paddingTop="8dp" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintActiveRoute"
        android:layout_marginHorizontal="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/activeTripStatus"
            app:layout_constraintBottom_toBottomOf="@id/endTripBtn"
            app:layout_constraintTop_toTopOf="@id/endTripBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/endTripBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text=""
            android:textStyle="bold"/>

        <com.google.android.material.button.MaterialButton
            android:layout_marginHorizontal="24dp"
            android:id="@+id/endTripBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_trip" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/recentTripsHeader"
        android:layout_marginHorizontal="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recent_trips"
        android:textStyle="bold"
        android:textSize="18sp"
        android:visibility="gone"
        android:textColor="@color/teal_700"
        android:layout_marginTop="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recentTripsList"
        android:layout_marginHorizontal="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingTop="8dp" />

</LinearLayout>
